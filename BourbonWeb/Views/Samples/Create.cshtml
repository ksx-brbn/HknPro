@model BourbonWeb.Models.Sample

@{
    ViewData["Title"] = "サンプルデータ登録";
}

<div class="card">
    <form asp-action="Create">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Quantity" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Weight" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="TargetYM" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="TargetYM" class="form-control" type="month" asp-format="{0:yyyy-MM}" />
                    <span asp-validation-for="TargetYM" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="PaymentDate" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="PaymentDate" class="form-control" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="UpdatedAt" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="UpdatedAt" class="form-control" />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="IsActive" class="col-sm-1 form-check-label"></label>
                <div class="col-sm-11 form-check">
                    @Html.CheckBox("IsActive", Model?.IsActive ?? false, new { @class = "form-check-input ms-1" })
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Text1" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Text1" class="form-control" />
                    <span asp-validation-for="Text1" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Text2" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Text2" class="form-control" />
                    <span asp-validation-for="Text2" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Text3" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Text3" class="form-control" />
                    <span asp-validation-for="Text3" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Text4" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Text4" class="form-control" />
                    <span asp-validation-for="Text4" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Text5" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Text5" class="form-control" />
                    <span asp-validation-for="Text5" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="登録" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary float-end">戻る</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
