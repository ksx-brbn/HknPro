@model PaginatedList<BourbonWeb.Models.HansokuSinsei>

@{
    ViewData["Title"] = "販促費申請条件入力（確定）";
    var layout = ViewData["Layout"] as string ?? "pattern2";
}

<form id="searchForm" method="get" class="mb-3 text-nowrap">
    @await Html.PartialAsync("_InputConditionsSection", Model, new ViewDataDictionary(ViewData) { ["Layout"] = layout })
    <div class="me-1 text-end">
        <button type="submit" id="searchButton" class="btn btn-sm btn-secondary btn-fixed">検索 (F10)</button>
        <a asp-action="Home" id="closeButton" class="btn btn-sm btn-secondary btn-fixed ms-2">閉じる (F4)</a>
    </div>
    <input type="hidden" name="pageNumber" value="1" />
</form>

<hr />
<div class="d-flex align-items-center justify-content-between mb-1 me-1">
    <div class="d-flex align-items-center">
        <a asp-action="CRV0020Sample" id="createButton" class="btn btn-sm btn-secondary btn-fixed">新規登録 (F12)</a>
    </div>
    <div>
        @Model.TotalCount.ToString("N0") 件
    </div>
</div>
@await Html.PartialAsync("_SinseiJokenTable", Model)

<nav aria-label="page navigation" class="mt-3 d-flex justify-content-center align-items-center">
    <ul class="pagination mb-0">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-keihishoCd="@(ViewData["CurrentKeihishoCd"])" asp-route-keihishaCd="@(ViewData["CurrentKeihishaCd"])" asp-route-sinseiChoaiCd="@(ViewData["CurrentSinseiChoaiCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])" asp-route-pageSize="@Model.PageSize">前へ</a>
        </li>
        <li class="page-item @(Model.PageIndex == 1 ? "active" : "")">
            <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="1" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-keihishoCd="@(ViewData["CurrentKeihishoCd"])" asp-route-keihishaCd="@(ViewData["CurrentKeihishaCd"])" asp-route-sinseiChoaiCd="@(ViewData["CurrentSinseiChoaiCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])" asp-route-pageSize="@Model.PageSize">1</a>
        </li>
        @if (Model.PageIndex > 3)
        {
            <li class="page-item disabled"><span class="page-link">…</span></li>
        }
        @for (var i = Math.Max(2, Model.PageIndex - 1); i <= Math.Min(Model.TotalPages - 1, Model.PageIndex + 1); i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@i" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-keihishoCd="@(ViewData["CurrentKeihishoCd"])" asp-route-keihishaCd="@(ViewData["CurrentKeihishaCd"])" asp-route-sinseiChoaiCd="@(ViewData["CurrentSinseiChoaiCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])" asp-route-pageSize="@Model.PageSize">@i</a>
            </li>
        }
        @if (Model.PageIndex < Model.TotalPages - 2)
        {
            <li class="page-item disabled"><span class="page-link">…</span></li>
        }
        @if (Model.TotalPages > 1)
        {
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "active" : "")">
                <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@Model.TotalPages" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-keihishoCd="@(ViewData["CurrentKeihishoCd"])" asp-route-keihishaCd="@(ViewData["CurrentKeihishaCd"])" asp-route-sinseiChoaiCd="@(ViewData["CurrentSinseiChoaiCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])" asp-route-pageSize="@Model.PageSize">@Model.TotalPages</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-keihishoCd="@(ViewData["CurrentKeihishoCd"])" asp-route-keihishaCd="@(ViewData["CurrentKeihishaCd"])" asp-route-sinseiChoaiCd="@(ViewData["CurrentSinseiChoaiCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])" asp-route-pageSize="@Model.PageSize">次へ</a>
        </li>
    </ul>
    <div class="ms-2">
        <select form="searchForm" name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()">
            <option value="5" selected="@(Model.PageSize == 5)">5件</option>
            <option value="10" selected="@(Model.PageSize == 10)">10件</option>
            <option value="25" selected="@(Model.PageSize == 25)">25件</option>
            <option value="50" selected="@(Model.PageSize == 50)">50件</option>
        </select>
    </div>
</nav>

