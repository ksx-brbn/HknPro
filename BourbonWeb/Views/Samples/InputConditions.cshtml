@model PaginatedList<BourbonWeb.Models.HansokuSinsei>

@{
    ViewData["Title"] = "販促費申請条件入力（確定）";
}

<form method="get" class="mb-3 text-nowrap">
    <div class="d-flex align-items-center">
        <label for="sinseiTaishoYm" class="me-2 fixed-width-sm">対象年月</label>
        <input type="month" id="sinseiTaishoYm" name="sinseiTaishoYm" class="form-control form-control-sm fixed-width-md" value="@(ViewData["CurrentSinseiTaishoYm"])" />
    </div>
    <div class="d-flex align-items-center mt-2">
        <label for="siharaiYoteiYmd" class="me-2 fixed-width-sm">支払予定日</label>
        <input type="date" id="siharaiYoteiYmd" name="siharaiYoteiYmd" class="form-control form-control-sm fixed-width-md" value="@(ViewData["CurrentSiharaiYoteiYmd"])" />
    </div>
    <div class="d-flex align-items-center mt-2">
        <label for="sinseiShoCd" class="me-2 fixed-width-sm">売上担当所</label>
        <input type="text" id="sinseiShoCd" name="sinseiShoCd" class="form-control form-control-sm fixed-width-md" value="@(ViewData["CurrentSinseiShoCd"])" />
        <input type="text" id="sinseiShoNm" name="sinseiShoNm" class="form-control form-control-sm fixed-width-lg ms-2" value="@(ViewData["CurrentSinseiShoNm"])" disabled />
    </div>
    <div class="d-flex align-items-center mt-2">
        <label for="sinseiShaCd" class="me-2 fixed-width-sm">売上担当者</label>
        <input type="text" id="sinseiShaCd" name="sinseiShaCd" class="form-control form-control-sm fixed-width-md" value="@(ViewData["CurrentSinseiShaCd"])" />
        <input type="text" id="sinseiShaNm" name="sinseiShaNm" class="form-control form-control-sm fixed-width-lg ms-2" value="@(ViewData["CurrentSinseiShaNm"])" disabled />
    </div>
    <div class="d-flex align-items-center mt-2">
        <label for="sinseiSeikyuCd" class="me-2 fixed-width-sm">請求・帳合</label>
        <input type="text" id="sinseiSeikyuCd" name="sinseiSeikyuCd" class="form-control form-control-sm fixed-width-md" value="@(ViewData["CurrentSinseiSeikyuCd"])" />
        <input type="text" id="sinseiSeikyuNm" name="sinseiSeikyuNm" class="form-control form-control-sm fixed-width-lg ms-2" value="@(ViewData["CurrentSinseiSeikyuNm"])" disabled />
    </div>
    <div class="d-flex align-items-center mt-2">
        <label class="me-2 fixed-width-sm">請求区分</label>
        <div class="form-check form-check-inline mt-1 ms-1">
            <input class="form-check-input" type="radio" id="seikyuKbn1" name="seikyuKbn" value="1" @(ViewData["CurrentSeikyuKbn"]?.ToString() == "1" ? "checked" : "") />
            <label class="form-check-label" for="seikyuKbn1">菓子</label>
        </div>
        <div class="form-check form-check-inline mt-1">
            <input class="form-check-input" type="radio" id="seikyuKbn2" name="seikyuKbn" value="2" @(ViewData["CurrentSeikyuKbn"]?.ToString() == "2" ? "checked" : "") />
            <label class="form-check-label" for="seikyuKbn2">飲料</label>
        </div>
    </div>
    <div class="d-flex align-items-center mt-2">
        <label for="torihikiCdA" class="me-2 fixed-width-sm">得意先</label>
        <input type="text" id="torihikiCdA" name="torihikiCdA" class="form-control form-control-sm fixed-width-md" value="@(ViewData["CurrentTorihikiCdA"])" />
        <input type="text" id="torihikiNmA" name="torihikiNmA" class="form-control form-control-sm fixed-width-lg ms-2" value="@(ViewData["CurrentTorihikiNmA"])" disabled />
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-sm btn-primary">検索</button>
    </div>
    <input type="hidden" name="pageNumber" value="1" />
</form>
<div class="d-flex align-items-center justify-content-between mb-1">
    <div class="d-flex align-items-center">
        <p class="mb-0 me-3">販促費申請条件入力（確定）</p>
    </div>
    <div>
        @Model.TotalCount.ToString("N0") 件
    </div>
</div>
@await Html.PartialAsync("_HansokuSinseiMainTable", Model)

<nav aria-label="page navigation" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-sinseiShoCd="@(ViewData["CurrentSinseiShoCd"])" asp-route-sinseiShaCd="@(ViewData["CurrentSinseiShaCd"])" asp-route-sinseiSeikyuCd="@(ViewData["CurrentSinseiSeikyuCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])">前へ</a>
        </li>
        <li class="page-item @(Model.PageIndex == 1 ? "active" : "")">
            <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="1" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-sinseiShoCd="@(ViewData["CurrentSinseiShoCd"])" asp-route-sinseiShaCd="@(ViewData["CurrentSinseiShaCd"])" asp-route-sinseiSeikyuCd="@(ViewData["CurrentSinseiSeikyuCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])">1</a>
        </li>
        @if (Model.PageIndex > 3)
        {
            <li class="page-item disabled"><span class="page-link">…</span></li>
        }
        @for (var i = Math.Max(2, Model.PageIndex - 1); i <= Math.Min(Model.TotalPages - 1, Model.PageIndex + 1); i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@i" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-sinseiShoCd="@(ViewData["CurrentSinseiShoCd"])" asp-route-sinseiShaCd="@(ViewData["CurrentSinseiShaCd"])" asp-route-sinseiSeikyuCd="@(ViewData["CurrentSinseiSeikyuCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])">@i</a>
            </li>
        }
        @if (Model.PageIndex < Model.TotalPages - 2)
        {
            <li class="page-item disabled"><span class="page-link">…</span></li>
        }
        @if (Model.TotalPages > 1)
        {
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "active" : "")">
                <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@Model.TotalPages" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-sinseiShoCd="@(ViewData["CurrentSinseiShoCd"])" asp-route-sinseiShaCd="@(ViewData["CurrentSinseiShaCd"])" asp-route-sinseiSeikyuCd="@(ViewData["CurrentSinseiSeikyuCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])">@Model.TotalPages</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="InputConditions" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sinseiTaishoYm="@(ViewData["CurrentSinseiTaishoYm"])" asp-route-siharaiYoteiYmd="@(ViewData["CurrentSiharaiYoteiYmd"])" asp-route-sinseiShoCd="@(ViewData["CurrentSinseiShoCd"])" asp-route-sinseiShaCd="@(ViewData["CurrentSinseiShaCd"])" asp-route-sinseiSeikyuCd="@(ViewData["CurrentSinseiSeikyuCd"])" asp-route-torihikiCdA="@(ViewData["CurrentTorihikiCdA"])">次へ</a>
        </li>
    </ul>
</nav>
